--Load
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/hakaiofc/Base/main/HUBORION')))()

--Main Script
local Window = OrionLib:MakeWindow({Name = "ðŸ¥‹", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest", IntroEnabled = false})

--Valor
_G.AutoHealth = True

--FunÃ§Ã£o
function AutoHealth()
while _G.AutoHealth == true do
local args = {
    [1] = "GiveHealthCuzPro",
    [2] = 2,
    [3] = 1
}

game:GetService("ReplicatedStorage"):WaitForChild("andreymax"):FireServer(unpack(args))

local args = {
    [1] = "GiveHealthCuzPro",
    [2] = 2,
    [3] = 1
}

game:GetService("ReplicatedStorage"):WaitForChild("andreymax"):FireServer(unpack(args))
wait(0.0000001)
end
end





--Main
local FarmTab= Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})
local Section = FarmTab:AddSection({
    Name = "AutoFarm"
})
FarmTab:AddToggle({
    Name = "Auto-Health",
    Default = false,
    Callback = function(Value)
        _G.AutoHealth = Value
        AutoHealth()
    end
})
